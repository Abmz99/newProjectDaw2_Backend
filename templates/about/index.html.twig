{# templates/about/index.html.twig #}

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}!</h1>
    <p>This about message is coming from:</p>
    {% if aboutMessage %}
        <div>
            <strong>Message Body:</strong> {{ aboutMessage.getBodyMessage }}
        </div>
    {% else %}
        <p>No about message found.</p>
    {% endif %}
</div>
